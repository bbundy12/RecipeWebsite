<body>
  <div id="body-content">
    <!-- Navbar -->
    <nav>
      <p><small>Signed in as:</small>User</p>
      <div id="links">
        <a href="/editUser">Edit Account Info</a>
        <a href="/logout">Log Out</a>
      </div>
    </nav>

    <header>
      <h2>Welcome!</h2>
      <p>Explore individual survey responses or view the dashboard below.</p>
      <a href="/createRecipe">Create Recipe</a>
    </header>
    
    <h1>Select Recipes</h1>
    <form action="/aggregate_ingredients" method="post">
        <% recipes.forEach(recipe => { %>
            <div>
                <input type="checkbox" name="selectedRecipes[]" id="<%= recipe.title %>" value="<%= recipe.title %>">
                <label for="<%= recipe.title %>"><%= recipe.title %></label>
            </div>
        <% }); %>
        <button type="submit">Generate Grocery List</button>
    </form>

    <!-- Reload on Resize -->
    <script>
      let prevMatch = window.matchMedia("(max-width: 1080px)").matches;
      function checkMediaQuery() {
        const currentMatch = window.matchMedia("(max-width: 1080px)").matches;
        if (currentMatch !== prevMatch) {
          location.reload();
        }
        prevMatch = currentMatch;
      }
      window.addEventListener('resize', checkMediaQuery);
    </script>

